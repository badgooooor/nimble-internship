<% if user_signed_in? %>
  <h2>Dashboard</h2>
  <button class="btn waves-effect waves-light">
    <%= button_to('Add Course', new_course_path, method: :get) %>
  </button>
  <% if current_user.role == 'teacher'%>
  <%= render 'layouts/course_table' %>
  <% else %>
    <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  <% end %>
<% else %>
  <div class="row">
    <div class="col s6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Haven't used yet?</span>
          <p>Register for creating and manage new class</p>
        </div>
        <div class="card-action">
          <%= link_to "Sign up!", new_user_registration_path, method: :get %>
        </div>
      </div>
      
    </div>
    <div class="col s6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Sign in</span>
          <p>Manage the class and student or view courses</p>
        </div>
        <div class="card-action">
          <%= link_to "Sign in", new_user_session_path, method: :get %>
        </div>
      </div>
    </div>
  </div>
<% end %>